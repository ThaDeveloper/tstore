<div class="col-xs-10 col-xs-offset-1">
  <%= form_for(@product) do |f| %> 
    <div id="product-wrap"> 
        <% if @product.errors.any? %>  
        <div id="error_explanation">  
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>  
          <ul>  
          <% @product.errors.full_messages.each do |message| %>  
          <li><%= message %></li>  
          <% end %>  
          </ul>  
        </div>  
        <% end %>
        <div class="row">
          <div class="col-xs-12">
          <h3 class="page-header">Product</h3>
          </div><!-- .col -->
        </div>
        <div class="row product-info">
          <div class="form-group">  
             
            <%= f.text_field :code, class: "form-control", placeholder: "Product Code" %>  
          </div> 
          <div class="form-group">  
             
            <%= f.text_field :name, class: "form-control", placeholder: "Product Name"  %>  
          </div>  
          <div class="form-group">  
            <%= f.text_field :stock, class: "form-control", placeholder: "Available Stock"  %>  
          </div>
          <div class="form-group">  
            <%= f.text_field :price, class: "form-control", placeholder: "Product Price"  %>  
          </div>
          <div class="form-group">  
            <%= f.text_field :discount_price, class: "form-control", placeholder: "Discount Price"  %>  
          </div>
          <div class="form-group">  
            <%= f.text_field :promotion_opt, class: "form-control", placeholder: "Promotion Opt"  %>  
          </div><br>
          <div class="form-group">  
            <%= f.button :submit, class: "btn btn-primary btn-large" %>  
          </div>
        </div><!-- row product-info-->
    </div>
  <% end %> 
</div> 
