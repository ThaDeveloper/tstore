<p id="notice"><%= notice %></p>

<h1>Product Catalogs</h1>

<table>
  <thead>
    <tr>
      <th>Product code</th>
      <th>Product name</th>
      <th>Quantities</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_catalogs.each do |product_catalog| %>
      <tr>
        <td><%= product_catalog.product_code %></td>
        <td><%= product_catalog.product_name %></td>
        <td><%= product_catalog.quantities %></td>
        <td><%= product_catalog.price %></td>
        <td><%= link_to 'Show', product_catalog %></td>
        <td><%= link_to 'Edit', edit_product_catalog_path(product_catalog) %></td>
        <td><%= link_to 'Destroy', product_catalog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Catalog', new_product_catalog_path %>
